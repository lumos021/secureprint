const { check, validationResult } = require('express-validator');

const validateUploadFiles = [
  check('files').isArray({ min: 1 }).withMessage('No files uploaded'),
  (req, res, next) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) {
      return res.status(400).json({ errors: errors.array() });
    }
    next();
  }
];

const validateFilename = [
  check('filename').isString().notEmpty().withMessage('Invalid filename'),
  (req, res, next) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) {
      return res.status(400).json({ errors: errors.array() });
    }
    next();
  }
];

const validatePrintSettings = [
  check('printSettings').optional().isObject().withMessage('Invalid print settings'),
  (req, res, next) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) {
      return res.status(400).json({ errors: errors.array() });
    }
    next();
  }
];

module.exports = {
  validateUploadFiles,
  validateFilename,
  validatePrintSettings
};
